@model VehicleInsuranceManagement.ViewModels.LoginViewModel;

<div class="container d-flex align-items-center justify-content-center vh-100">
    <div class="card login-card shadow-lg border-0">
        <div class="card-body p-5">
            <div class="text-center mb-4">
                <h2 class="text-warning fw-bold">Oberlo</h2>
                <p class="text-secondary">Login to your account</p>
            </div>
            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label class="form-label text-light">Email</label>
                    <input asp-for="Email" class="form-control bg-dark text-light border-secondary" placeholder="Enter email">
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label text-light">Password</label>
                    <input asp-for="Password" class="form-control bg-dark text-light border-secondary" placeholder="Enter password">
                    <span asp-validation-for="Password"></span>
                </div>
                <button type="submit" class="btn btn-warning w-100 fw-semibold mt-3">Login</button>
            </form>
            <div class="text-center mt-3">
                <p class="text-secondary">Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-warning text-decoration-none">Register</a></p>
            </div>
        </div>
    </div>
</div>